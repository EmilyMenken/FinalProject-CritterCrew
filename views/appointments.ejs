<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>


<!-- favicon -->
<link rel="icon" type="image/jpg" href="/pictures/logo.webp">

<!-- link to styleSheet -->
 <link rel="styleSheet" href="/styles/styles.css">

</head>
<body>

    <img id="profilePagePicture" src = "/pictures/catLandingPagePicture.jpg">

    <h1>Hello, <%= user.fname %>!</h1>

<div id="container">
    
    <div id ="floatLeft">

    <a href="/newAppointment"><button>Schedule a new Appointment</button></a> 

    <h3>Your appointments</h3>

    <div id = "appointmentsDisplay">

    <% if (appointments.length > 0) { %>
    <ul>
        <% appointments.forEach(appointment => { %>
        <p> Date: <%= appointment.appt_date %> </p>
            <li> Pet Name: <%= appointment.petname %> </li>
            <li> Pet Type: <%= appointment.pettype %>  </li>
            <li> Service: <%= appointment.service %> </li>
            <li> Friendly: <%= appointment.friendly ? 'Yes' : 'No' %> </li>
            
            <hr>

        <% }); %>
    </ul>


    <% } else { %>
    <p>No appointments scheduled.</p>
    <% } %>

    </div>
    </div> <!-- end floatLeft-->


    <div id="floatRight">
 
        <a href="/logout"><button>Log out</button></a>

        <h3>User information</h3>

        <ul>
        <li> Last Name: <%=user.lname %> </li>
        <li> Email: <%= user.email %> </li>
        <li> Phone Number: <%= user.phone %> </li>
        <li> Current Address: <%= user.street_address%> </li>
        <li> Current city: <%=user.city %> </li>
        <li> Current state: <%= user.state %></li>
        <li> Current zipcode: <%= user.zip_code %> </li>
        <li> Account created: <%= user.timestamp %></li>
        </ul>

    </div>

</div>

</body>
</html>