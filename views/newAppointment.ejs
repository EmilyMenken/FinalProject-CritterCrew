<body>
   
    <p>Create New Appointment</p>

    <form action="/newAppointment" method="post">
        <fieldset>

<label for="date" class id="creatingNewAppointment"> Appointment date
<input for ="date" type = "date" name="date"></input>
</label>

<label for="pname" class id="creatingNewAppointment"> Pet Name
    <input type="text" maxlength="255" name="pname" placeholder="Mittens"></input>    
</label>

<label for="petType" class id="creatingNewAppointment"> Pet type
    <input type="radio" name="petType" value="dog"> Dog </input>
    <input type="radio" name="petType" value="cat"> Cat </input>    
</label>   
    
<label for="friendly?" class id="creatingNewAppointment"> Is your pet friendly?
    <input type="checkbox" name="friendly?" value="friendly?"> Yes </input>  
</label>

<label for="serviceType" class id="creatingNewAppointment">Service Type
    <select name= "serviceType" id="serviceType">
        <option value= "select"> Select type... </option>
        <option value= "select"> Bath & Brush </option>
        <option value= "select"> Bath & Haircut </option>
        <option value= "select"> Nail clipping </option>
        <option value= "select"> Deluxe package (Brush, Haircut, Nail clipping) </option>
    </select>
        
</label>

</fieldset>
</form>

</body>
</html>